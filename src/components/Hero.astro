---
// Hero section component
---

<section id="home" class="hero">
	<div class="hero-content">
		<div class="hero-text">
			<h1 class="hero-title">Dillz Bites</h1>
			<p class="hero-subtitle">Artisan Bakery</p>
			<p class="hero-description">Creating delicious custom cakes and baked goods with love, passion, and the finest ingredients</p>
			<a href="#gallery" class="cta-button">View Our Creations</a>
		</div>
		<div class="hero-image">
			<img src="/images/cake_collage.jpg" alt="Beautiful cake collage" />
		</div>
	</div>
</section>

<style>
	.hero {
		padding: 120px 0 80px;
		background: linear-gradient(135deg, var(--light-purple), var(--light-blue));
		display: flex;
		align-items: center;
		min-height: 100vh;
	}

	.hero-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.hero-title {
		font-family: 'Dancing Script', cursive;
		font-size: 4rem;
		font-weight: 700;
		background: var(--gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-bottom: 0.5rem;
	}

	.hero-subtitle {
		font-size: 1.5rem;
		color: var(--primary-purple);
		margin-bottom: 1rem;
		font-weight: 500;
	}

	.hero-description {
		font-size: 1.1rem;
		color: var(--black);
		margin-bottom: 2rem;
		line-height: 1.8;
	}

	.cta-button {
		display: inline-block;
		background: var(--gradient);
		color: white;
		padding: 1rem 2rem;
		text-decoration: none;
		border-radius: 50px;
		font-weight: 600;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		box-shadow: 0 4px 15px rgba(246, 83, 166, 0.3);
	}

	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(246, 83, 166, 0.4);
	}

	.hero-image {
		position: relative;
	}

	.hero-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: 20px;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.hero {
			padding: 100px 0 60px;
			min-height: auto;
		}

		.hero-content {
			grid-template-columns: 1fr;
			text-align: center;
			gap: 2.5rem;
			padding: 0 1.5rem;
		}

		.hero-title {
			font-size: 3rem;
			margin-bottom: 0.75rem;
		}

		.hero-subtitle {
			font-size: 1.3rem;
			margin-bottom: 1.5rem;
		}

		.hero-description {
			font-size: 1rem;
			margin-bottom: 2.5rem;
			max-width: 500px;
			margin-left: auto;
			margin-right: auto;
		}

		.hero-image img {
			height: 280px;
			border-radius: 15px;
		}

		.cta-button {
			padding: 1.2rem 2.5rem;
			font-size: 1.1rem;
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding: 90px 0 50px;
		}

		.hero-content {
			gap: 2rem;
			padding: 0 1rem;
		}

		.hero-title {
			font-size: 2.5rem;
			line-height: 1.1;
		}

		.hero-subtitle {
			font-size: 1.2rem;
		}

		.hero-description {
			font-size: 0.95rem;
			margin-bottom: 2rem;
		}

		.hero-image img {
			height: 220px;
			border-radius: 12px;
		}

		.cta-button {
			padding: 1rem 2rem;
			font-size: 1rem;
		}
	}

	@media (max-width: 360px) {
		.hero-content {
			padding: 0 0.75rem;
		}

		.hero-title {
			font-size: 2.2rem;
		}

		.hero-image img {
			height: 200px;
		}
	}
</style> 