---
import { Image } from 'astro:assets';
import cakeCollage from '../assets/images/cake_collage.jpg';
---

<section class="hero section" id="home">
  <div class="container hero-grid">
    <div class="hero-copy" data-reveal>
      <p class="eyebrow">Bespoke Cakes for Every Occasion</p>
      <h1>Designed with care, baked fresh, and built around your celebration.</h1>
      <p>
        Dillz Bites crafts custom cakes for birthdays, weddings, showers, and special milestones. Share your
        vision and we will shape flavor, style, and scale around your event.
      </p>
      <div class="hero-actions">
        <a href="/order" class="button">Start Your Order</a>
        <a href="#gallery" class="button-outline">See Recent Cakes</a>
      </div>
    </div>

    <div class="hero-image" data-reveal>
      <Image
        src={cakeCollage}
        alt="Collage of custom cakes made by Dillz Bites"
        widths={[420, 620, 860]}
        sizes="(max-width: 52rem) 100vw, 48vw"
        loading="eager"
      />
      <div class="hero-badge">Custom consultations available Tuesday to Saturday</div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding-top: clamp(3rem, 8vw, 5rem);
  }

  .hero-grid {
    display: grid;
    gap: var(--space-7);
    align-items: center;
    grid-template-columns: 1.1fr 1fr;
  }

  .hero-copy h1 {
    margin: 0;
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 4rem);
    line-height: 1.04;
    max-width: 20ch;
  }

  .hero-copy p {
    margin-top: var(--space-4);
    max-width: 60ch;
    color: var(--text-muted);
  }

  .hero-actions {
    margin-top: var(--space-6);
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .hero-image {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: clip;
    box-shadow: var(--shadow-lg);
  }

  .hero-image img {
    width: 100%;
    aspect-ratio: 4 / 3;
    object-fit: cover;
  }

  .hero-badge {
    position: absolute;
    left: var(--space-4);
    right: var(--space-4);
    bottom: var(--space-4);
    background: var(--overlay-deep);
    color: var(--text-inverse);
    padding: 0.65rem 0.85rem;
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    text-align: center;
  }

  @media (max-width: 52rem) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .hero-copy h1 {
      max-width: none;
    }
  }
</style>
