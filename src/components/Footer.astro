---
// Footer component
let currentYear = new Date().getFullYear();
---

<footer class="footer">
	<div class="container">
		<div class="footer-content">
			<div class="footer-logo">
				<h3>Dillz Bites</h3>
				<p>Artisan Bakery</p>
			</div>
			<div class="footer-links">
				<a href="#home">Home</a>
				<a href="#gallery">Gallery</a>
				<a href="#about">About</a>
				<a href="#contact">Contact</a>
			</div>
		</div>
		<div class="footer-bottom">
			<p>&copy; {currentYear} Viridian Software. All rights reserved. Made with ❤️ for sweet moments.</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: var(--black);
		color: white;
		padding: 3rem 0 1rem;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.footer-logo h3 {
		font-family: 'Dancing Script', cursive;
		font-size: 2rem;
		background: var(--gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.footer-links {
		display: flex;
		gap: 2rem;
	}

	.footer-links a {
		color: white;
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-links a:hover {
		color: var(--primary-pink);
	}

	.footer-bottom {
		text-align: center;
		padding-top: 2rem;
		border-top: 1px solid #333;
		opacity: 0.7;
	}

	/* Mobile Responsive */
	@media (max-width: 768px) {
		.footer {
			padding: 2.5rem 0 1rem;
		}

		.container {
			padding: 0 1.5rem;
		}

		.footer-content {
			flex-direction: column;
			gap: 2rem;
			text-align: center;
			margin-bottom: 1.5rem;
		}

		.footer-logo h3 {
			font-size: 1.8rem;
			margin-bottom: 0.5rem;
		}

		.footer-logo p {
			font-size: 1rem;
			opacity: 0.9;
		}

		.footer-links {
			gap: 1.5rem;
			flex-wrap: wrap;
			justify-content: center;
		}

		.footer-links a {
			font-size: 1rem;
			padding: 0.5rem 1rem;
			border-radius: 6px;
			transition: all 0.3s ease;
		}

		.footer-links a:hover {
			background: rgba(246, 83, 166, 0.1);
		}

		.footer-bottom {
			padding-top: 1.5rem;
			font-size: 0.9rem;
		}
	}

	@media (max-width: 480px) {
		.footer {
			padding: 2rem 0 0.75rem;
		}

		.container {
			padding: 0 1rem;
		}

		.footer-content {
			gap: 1.5rem;
			margin-bottom: 1.25rem;
		}

		.footer-logo h3 {
			font-size: 1.6rem;
		}

		.footer-links {
			gap: 1rem;
		}

		.footer-links a {
			font-size: 0.95rem;
			padding: 0.4rem 0.8rem;
		}

		.footer-bottom {
			font-size: 0.85rem;
			line-height: 1.5;
		}
	}

	@media (max-width: 360px) {
		.container {
			padding: 0 0.75rem;
		}

		.footer-logo h3 {
			font-size: 1.5rem;
		}

		.footer-links {
			flex-direction: column;
			gap: 0.75rem;
		}

		.footer-bottom {
			font-size: 0.8rem;
		}
	}
</style> 